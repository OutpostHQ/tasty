{
  "$schema": "../../.vscode/package.schema.json",
  "name": "tastycss",
  "version": "0.5.5",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "types": "dist/mjs/index.d.ts",
  "license": "MIT",
  "typesVersions": {
    ">= 4.1": {
      "*": [
        "types/index.d.ts"
      ]
    }
  },
  "jsdelivr": "dist/mjs/index.js",
  "unpkg": "dist/mjs/index.js",
  "exports": {
    "require": "./dist/cjs/index.js",
    "import": "./dist/mjs/index.js",
    "types": "./dist/mjs/index.d.ts"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.map",
    "dist/**/*.d.ts"
  ],
  "sideEffects": false,
  "repository": "numldesign/tatsy",
  "homepage": "https://tasty.numl.design/",
  "bugs": "https://github.com/numldesign/tasty/issues",
  "contributors": [
    "Andrey Yamanov <tenphi@gmail.com>"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "component",
    "components",
    "create",
    "css",
    "css-in-js",
    "global",
    "globals",
    "javascript",
    "js",
    "nesting",
    "object",
    "object-oriented",
    "oo",
    "oocss",
    "oriented",
    "scope",
    "scoped",
    "ssr",
    "ssg",
    "style",
    "styled",
    "styles",
    "stylesheet",
    "stylesheets",
    "style-to-state",
    "tasty",
    "tastycss",
    "theme",
    "themes",
    "theming",
    "token",
    "tokens",
    "type",
    "typed",
    "types",
    "transform",
    "ts",
    "variable",
    "variables"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js && yarn size-limit",
    "test": "web-test-runner test/*.test.js --node-resolve",
    "fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\" && eslint --fix --cache src --ext .js,.ts,.jsx,.tsx"
  },
  "devDependencies": {
    "@open-wc/testing": "3.0.4",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-typescript": "8.3.0",
    "@size-limit/preset-small-lib": "7.0.8",
    "@testing-library/jest-dom": "5.16.2",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "@web/dev-server-esbuild": "0.2.16",
    "@web/test-runner": "0.13.27",
    "babel-eslint": "10.1.0",
    "eslint": "8.8.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react-app": "7.0.0",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "prettier": "2.5.1",
    "rollup": "2.67.1",
    "rollup-plugin-local-resolve": "1.0.7",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-visualizer": "5.5.4",
    "size-limit": "7.0.8",
    "tslib": "2.3.1",
    "typescript": "4.5.5"
  },
  "browserslist": [
    "last 1 chrome versions",
    "last 1 firefox versions",
    "last 1 safari versions",
    "maintained node versions"
  ],
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 120,
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": true,
    "overrides": [
      {
        "files": [
          "*.json",
          "*.md",
          ".prettierrc",
          "*.yml"
        ],
        "options": {
          "useTabs": false
        }
      }
    ]
  },
  "size-limit": [
    {
      "name": "TastyCSS Core",
      "path": [
        "dist/mjs/index.js"
      ]
    }
  ]
}
